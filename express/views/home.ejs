<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- --------------------- Police depuis google fonts ---------------------- -->
    <link
      href="https://fonts.googleapis.com/css2?family=Megrim&family=Nunito+Sans:opsz,wght@6..12,300;6..12,400;6..12,500&display=swap"
      rel="stylesheet"
    />
    <link href="/stylesheets/output.css" rel="stylesheet" />
    <title>ðŸ“™ Otaku Lib</title>
  </head>
  <body class="bg-white min-h-screen font-nunito-sans">
    <header class="bg-primary py-4">
      <h1 class="text-4xl font-megrim font-extrabold text-center text-white">
        Otaku Lib
      </h1>
    </header>

    <main
      class="container mx-auto px-5 sm:px-0 my-10 grid sm:grid-cols-2 lg:grid-cols-3 gap-10"
    >
      <!-- Boucle `forof` avec ejs -->
      <% for(const item of books) { %>
      <article
        class="flex flex-col items-start justify-between rounded overflow-hidden"
      >
        <div class="relative w-full">
          <img
            src="<%= item.image %>"
            alt="cover book of <%= item.title %>"
            class="w-full rounded-2xl object-cover aspect-[9/9]"
          />
          <div
            class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
          ></div>
        </div>

        <div class="max-w-xl px-5 sm:px-0">
          <ul class="mt-8 flex justify-between items-baseline gap-x-4">
            <li>
              <span class="block"
                >release : <time> <%= item.releaseDate %> </time></span
              >
            </li>

            <li>
              <span
                class="bg-secondary/40 text-black text-xs font-medium me-2 px-2.5 py-0.5 rounded border border-secondary"
              >
                <%= item.category %>
              </span>
            </li>
          </ul>
          <div class="group relative">
            <h3
              class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
            >
              <a href="/<%= item.title %>">
                <span class="absolute inset-0"></span>
                <%= item.title %>
              </a>
            </h3>
            <p class="mt-5 text leading-6 text-gray-600 line-clamp-2">
              <%= item.description %>
            </p>
          </div>
          <div class="relative mt-8 flex items-center gap-x-4">
            <img
              src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
              alt=""
              class="h-10 w-10 rounded-full bg-gray-100"
            />
            <div class="text leading-6">
              <p class="font-semibold text-gray-900">
                <a href="#">
                  <span class="absolute inset-0"></span>
                  <%= item.author %>
                </a>
              </p>
            </div>
          </div>
        </div>
      </article>
      <% } %>
    </main>

    <footer class="bg-primary py-4">
      <p class="text-center text-white font-nunito-sans">
        Â© 2023 Otaku Lib, Inc. All rights reserved.
      </p>
    </footer>
  </body>
</html>
